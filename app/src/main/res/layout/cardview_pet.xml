<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main_cardview"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="6dp"
android:background="@color/colorPrimaryLight"
android:layout_marginTop="3dp"
android:elevation="6dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/image_main_cardview"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:src="@drawable/anahisalgado2_thumb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/imagebutton_main_cardview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icons8_taz_n_del_perro_100"
            android:padding="3dp"
            />

        <TextView
            android:id="@+id/title_main_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:text="AnahÃ­"
            android:textSize="25dp"
            app:fontFamily="@font/medium_italic" />

        <TextView
            android:id="@+id/rank_main_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical|end"
            android:text="3"
            android:textSize="25dp"
            android:fontFamily="@font/medium_italic"
            android:layout_marginLeft="75dp"/>
        <ImageView
            android:id="@+id/bone_main_cardview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icons8_taz_n_del_perrof_100"
            android:padding="3dp"
            />
    </LinearLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
